function on_message(self, message_id, message, sender)
	if message_id == hash("add_bone") then
		table.insert(self.bone_list, message.bone_url)
	end
	if message_id == hash("remove_bone") then
		print("NOT YET IMPLEMENTED")
	end
end

function on_input(self, action_id, action)
	local pos = vmath.vector3(action.x, action.y, 0)
	go.set_position(pos)
	if action_id == hash("touch") and action.pressed then
		for _,v in pairs(self.bone_list) do
			msg.post(v, "clicked_bone", {action=action})
		end	
	end
end

