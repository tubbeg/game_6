
local function tint_score()
	go.animate("#label", "color", go.PLAYBACK_ONCE_FORWARD, vmath.vector4(0,.5,0.1,0), go.EASING_INOUTSINE, 0.7)
end

local function set_score(self, nr)
	self.score = nr
	label.set_text("#label", "+ " .. tostring(self.score))
end

function init(self)
	set_score(self,0)
	local angle = math.rad(0)
	go.set_rotation(vmath.quat_rotation_z(angle))
	self.timer = nil
	self.max_time = 5
	self.current_time = 0
	self.combo = 1
end

