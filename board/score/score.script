function on_message(self, message_id, message, sender)
	if message_id == hash("add_combo") then
		self.combo = self.combo + 1
		self.score = self.score * self.combo
		label.set_text("#label", "+ " .. tostring(self.score) .. " x" .. tostring(self.combo))
		tint_score()
	end
	if message_id == hash("bones") then
		local fn = function()
			if self.current_time > self.max_time then 
				timer.cancel(self.timer)
				msg.post(message.url,"add_score",{score=self.score})
				go.delete(".", true)
			else
				self.current_time = self.current_time + 1
			end
		end
		timer.delay(1, true,fn)
	end
end

